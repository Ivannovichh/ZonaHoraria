<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner (combo) para seleccionar país / zona UTC -->
    <TextView
        android:id="@+id/tv_select_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona zona / país"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_zones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- TimePicker inline (sin botón). Se ve directamente en la UI -->
    <TextView
        android:id="@+id/tv_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona hora local"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Resultado: diferencia y hora convertida -->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado aparecerá aquí"
        android:paddingTop="24dp"
        android:textSize="16sp" />

</LinearLayout>

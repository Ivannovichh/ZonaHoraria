<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cyan"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- GIF de fondo -->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/fondoGif"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo" />

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/ZonaHoraria"
            android:textColor="@color/black"
            android:textSize="28sp"/>

        <Button
            android:id="@+id/btnHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/seleccionar_hora" />

        <!-- INICIO DEL COMBOBOX PARA SELECCIONAR PAÍS -->
        <Spinner
            android:id="@+id/autoCompletePaises"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@android:drawable/btn_dropdown"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:hint="@string/selecciona_un_pais"/>
        <!-- FIN DEL COMBOBOX -->

    </LinearLayout>
</layout>

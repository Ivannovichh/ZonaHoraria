<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Contenedor que contiene el texto encima de la imagen y el gif -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp">

            <!-- Gif -->
            <ImageView
                android:id="@+id/Gif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/nombreApp" />

            <!-- Texto encima -->
            <TextView
                android:id="@+id/txtEncima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tituloApp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="#802196F3"
                android:shadowColor="#80000000"
                android:shadowRadius="6"
                android:shadowDx="2"
                android:shadowDy="2" />

        </FrameLayout>

        <!-- Título de sección para país/hora local -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seleccionarOrigen"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <!-- Spinner de país/zona origen -->
        <Spinner
            android:id="@+id/spinnerOrigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Selector de hora en modo spinner; lo centramos con el LinearLayout -->
        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SpinnerTimePickerStyle" />

        <!-- Título de sección para país destino -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seleccionarDestino"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <!-- Spinner de país/zona destino -->
        <Spinner
            android:id="@+id/spinnerDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botón para realizar la conversión -->
        <Button
            android:id="@+id/btnConvertir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textoBoton"
            android:layout_marginTop="12dp"/>

        <!-- TextView que muestra el texto de resultado -->
        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="12dp"/>

    </LinearLayout>

</ScrollView>

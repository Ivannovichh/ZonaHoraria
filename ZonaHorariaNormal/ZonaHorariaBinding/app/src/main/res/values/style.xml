<?xml version="1.0" encoding="utf-8"?>
<!--
    Archivo de estilos que define la apariencia de los botones de la calculadora.
    Los estilos aquí declarados permiten mantener coherencia visual en todos los botones
    y facilitan aplicar variaciones (como el botón "DEL") sin duplicar código visual.
-->
<resources>

    <!--
        Estilo base para los botones de la calculadora.
        Hereda de "Widget.MaterialComponents.Button" para aprovechar las propiedades
        modernas de Material Design (bordes redondeados, elevación, tintes, etc.).
        Este estilo controla tamaño, fuente, colores, margen, padding y otros atributos comunes.
    -->
    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button">

        <!-- Ancho dinámico (0dp) para que el GridLayout reparta el espacio según "columnWeight". -->
        <item name="android:layout_width">0dp</item>

        <!-- Altura ajustada al contenido del texto del botón. -->
        <item name="android:layout_height">wrap_content</item>

        <!-- Peso relativo de la columna: define cómo se distribuye el ancho en el GridLayout. -->
        <item name="android:layout_columnWeight">1</item>

        <!-- Hace que el botón se estire a lo ancho dentro de su celda del GridLayout. -->
        <item name="android:layout_gravity">fill_horizontal</item>

        <!-- Espacio exterior que separa cada botón de los demás (margen). -->
        <item name="android:layout_margin">6dp</item>

        <!-- Espacio interior entre el borde del botón y su texto (padding). -->
        <item name="android:padding">12dp</item>

        <!-- Define el tipo de fuente: "monospace" produce caracteres de ancho fijo, útil para números. -->
        <item name="android:fontFamily">monospace</item>

        <!-- Tamaño del texto que aparece en el botón. -->
        <item name="android:textSize">22sp</item>

        <!-- Color del texto (blanco) para máximo contraste sobre fondos oscuros o coloridos. -->
        <item name="android:textColor">@color/white</item>

        <!-- Color principal de fondo del botón (en este caso lila). -->
        <item name="android:backgroundTint">@color/lila</item>

        <!-- Le da una pequeña sombra bajo el botón (efecto de elevación o relieve). -->
        <item name="android:elevation">4dp</item>

        <!-- Redondea las esquinas del botón (100dp genera forma de cápsula o círculo). -->
        <item name="cornerRadius">100dp</item>
    </style>

    <!--
        Estilo derivado del anterior, para el botón principal de acción (por ejemplo, "DEL").
        Hereda todas las propiedades del estilo base "CalculatorButton",
        pero cambia el color de fondo para diferenciarlo visualmente.
    -->
    <style name="CalculatorButtonPrimary" parent="CalculatorButton">

        <!-- Aplica un tinte de fondo diferente (naranja) para resaltar el botón principal. -->
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <!--
    Estilo personalizado para los elementos Spinner (combobox).
    Permite definir el color del texto y del fondo del menú desplegable.
    Se aplica desde el XML del layout con:  style="@style/CustomSpinnerStyle"
-->
    <style name="CustomSpinnerStyle" parent="@android:style/Widget.Spinner">

        <!--
            Define el color del texto mostrado dentro del Spinner.
            Por defecto el texto suele ser gris, con este ajuste se fuerza a negro.
        -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/black</item>

        <!--
            Define el color de fondo del panel desplegable (la lista de opciones).
            Se establece en blanco para mantener contraste con el texto negro.
        -->
        <item name="android:popupBackground">@android:color/black</item>

    </style>


</resources>
